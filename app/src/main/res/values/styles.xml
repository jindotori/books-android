<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchTitleBodyStyle">
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_2</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SearchSubTitleBodyStyle">
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_2</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SearchPriceHeaderStyle">
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/royal_blue</item>
    </style>

    <style name="SearchPriceBodyStyle">
        <item name="android:paddingBottom">@dimen/padding</item>
